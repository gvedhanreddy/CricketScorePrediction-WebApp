@page
@model CricketWebApp.Pages.ViewPlayerstats.MostFiftyModel
@{
}
<!-- This is the header of the table, which will contain column names -->
<h3>Most 50s Scored by a Player</h3>

<!-- Add some CSS classes to style the table -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <!-- This column will display the name of the player -->
           <th style="background-color: #4CAF50; color: white;">Player Name</th>
            <!-- This column will display the number of innings the player has played -->
            <th style="background-color: #4CAF50; color: white;">Innings</th>
            <!-- This column will display the number of fifties scored by the player -->
            <th style="background-color: #4CAF50; color: white;">Fifties Scored</th>
        </tr>
    </thead>
    <tbody>
        <!-- This foreach loop will iterate through each player in the "MostFifty" list of the model -->
        @foreach (var player in Model.MostFifty)
        {
             <!-- This console write line is not needed in the view and can be removed -->
            Console.WriteLine(player);
            <!-- This row will display the player's name, matches played, and number of fifties scored -->
            <tr>
                <td>@player.PlayerName</td>
                <td>@player.MatchesPlayed</td>
                <td>@player.Fifty</td>
            </tr>
        }
    </tbody>
</table>

<!--Adding styling to the webpage using CSS -->
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    .top-player {
        color: #228B22;
    }
</style>