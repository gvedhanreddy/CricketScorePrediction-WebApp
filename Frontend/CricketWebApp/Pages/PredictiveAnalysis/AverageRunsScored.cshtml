@page
@model CricketWebApp.Pages.PredictiveAnalysis.AverageRunsScoredModel
@{
    ViewData["Title"] = "Player Analysis";
}

<!-- Display the search bar to search player by name-->
<div class="container my-5 py-4" style="background-image: url('https://example.com/background-image.jpg'); background-size: cover;">
    <h2 class="text-center text-black mb-4">Player Analysis</h2>
    <p class="lead text-center text-black mb-5">Enter a player's name to predict the average runs they'll score in the next match.</p>

    <!-- Search Database and display player by name from database-->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="PlayerName" class="control-label"></label>
                    <input asp-for="PlayerName" class="form-control" />
                    <span asp-validation-for="PlayerName" class="text-danger"></span>
                </div>
                <!-- After clicking submit button fetch player by name from database-->
                <div class="form-group text-center">
                    <input type="submit" value="Predict Runs" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <!--Display the boundary percentage of the player searched by the user-->
    @if (!String.IsNullOrEmpty(ViewData["Result"]?.ToString()))
    {
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h3 class="text-black">Prediction Result</h3>
                <p class="lead text-black">@ViewData["Result"]</p>
            </div>
        </div>
    }
</div>

<!--Adding CSS styling to the webpage-->
<style>
    button {
        font-size: 20px;
        padding: 10px 20px;
    }
</style>
